{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "CommonJS",
    "outDir": "dist",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "src/interface",
    "storage"
  ]
}